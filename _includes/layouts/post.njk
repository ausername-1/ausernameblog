---
 layout: layouts/base.njk
---

<h2>{{ title }}</h2>
<div id="publisheddate" class="subtitle text-muted mb-2">Published on {{ date | readableDate }}</div>
<div id="ImageModal" class="modal fade" role='dialog'>
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
                <h4 class="modal-title">{{ title }}</h4>
            </div>
            <div class="modal-body">
                         <img src="{{ featuredImage | url }}" style="width:100%;height:100%;">       
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
      </div>
  </div>
  

<img onclick="javascript:void(0);" class="" data-toggle="modal" data-target="#ImageModal" src="{{ featuredImage | url }}" alt="{{title}}" style="cursor: pointer"></img>
<p>{{ content | safe}}</p>
