<div class="row">
{% for post in postslist | reverse %}
<div class="col-sm-4">
<div class="card mt-2" style="width: 18rem;">
<img class="card-image-top" src="{{ post.data.featuredImage | url }}" alt="{{post.data.title}}"></img>
        <div id="publisheddate" class="card-subtitle text-muted mb-2" datetime="{{ post.date | htmlDateString }}">
        {{ post.date | readableDate }}
         </div>
        <p class="card-text">{{ post.data.description }}</p>
     {% for tag in post.data.tags %}
      {%- if collections.tagList.indexOf(tag) != -1 -%}
      {% set tagUrl %}/tags/{{ tag }}/{% endset %}
      <span class="badge"><a href="{{ tagUrl | url }}" class="post-tag badge-pill">{{ tag }}</a></span>&nbsp;
      {%- endif -%}
    {% endfor %}
        <p class="card-text">{{ post.data.description }}</p>
   <a href="{{ post.url | url }}" class="btn btn-primary">Read More</a>
  </div>
</div>
{% endfor %}
